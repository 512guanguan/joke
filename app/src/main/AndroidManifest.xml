    package="com.llb.joke">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.llb.subway.view.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.llb.pixabay.view.PixabayMainActivity"
            android:label="@string/title_activity_pixabay_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.llb.subway.view.base.BaseActivity" />
        <activity android:name="com.llb.subway.view.forum_home.ForumHomeActivity"></activity>
        <activity android:name="com.llb.subway.view.post_detail.PostDetailActivity"></activity>
    </application>

</manifest>