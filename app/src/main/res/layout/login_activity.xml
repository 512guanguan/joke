<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/captcha_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3e3e3e"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ico_papers" />

        <com.llb.subway.common.widget.EditTextWithClearButon
            android:id="@+id/id_num_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="账号"
            android:maxLength="20"
            android:paddingBottom="15dp"
            android:paddingLeft="3dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/id_num_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:clickable="true"
            android:drawableRight="@mipmap/select_down_icon"
            android:padding="15dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ico_password" />

        <com.llb.subway.common.widget.EditTextWithClearButon
            android:id="@+id/pwd_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:imeOptions="actionDone"
            android:paddingBottom="15dp"
            android:paddingLeft="3dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:password="true" />
    </LinearLayout>
</LinearLayout>
