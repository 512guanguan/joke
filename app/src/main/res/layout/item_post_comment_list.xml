<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/title_layout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/head_shortcut_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/common_full_open_on_phone"
            android:visibility="visible"/>
        <RelativeLayout
            android:id="@+id/title_top_layout_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/head_shortcut_iv"
            android:layout_toLeftOf="@+id/reply_tv"
            android:paddingBottom="3dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/comment_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:maxWidth="180dp"
                android:text="逗比dddddddddddddddddddddddd"
                android:textColor="@color/main_lightblue"
                android:padding="3dp"
                android:ellipsize="marquee"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/comment_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment_author_tv"
                android:text="2009-09-10 17:23:11"
                android:paddingLeft="5dp"
                android:textSize="12dp"
                android:textColor="@color/select_text"/>
            <TextView
                android:id="@+id/floor_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="楼主"
                android:textColor="@color/select_text"
                android:layout_toRightOf="@+id/comment_time_tv"
                android:layout_alignBaseline="@+id/comment_time_tv"
                android:layout_marginStart="30dp"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/reply_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复"
            android:textColor="@color/main_darkblue"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textSize="12sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/comment_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout_ll"
        android:minLines="2"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="20dp"
        android:text="我是评论内容！！！"
        android:textSize="14dp"
        android:textColor="@color/main_darkblue"/>
</RelativeLayout>
