<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:background="@android:color/white"
                android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/title_layout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/head_shortcut_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:src="@drawable/common_full_open_on_phone"
            android:visibility="visible"/>
        <LinearLayout
            android:id="@+id/title_top_layout_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/head_shortcut_iv"
            android:layout_toLeftOf="@+id/comment_tv"
            android:paddingBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/comment_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:maxWidth="180dp"
                android:text="逗比dddddddddddddddddddddddd"
                android:ellipsize="marquee"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/floor_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:text="楼主"
                android:textSize="16sp"
                android:textColor="#33ff33"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:text="回复"/>
        <TextView
            android:id="@+id/comment_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_top_layout_ll"
            android:layout_toRightOf="@+id/head_shortcut_iv"
            android:layout_toLeftOf="@+id/comment_tv"
            android:text="2009-09-10 17:23:11"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/comment_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout_ll"
        android:minLines="4"
        android:padding="10dp"
        android:text="我是评论内容！！！"/>

</RelativeLayout>
