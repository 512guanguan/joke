<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
    android:background="@drawable/item_main_list_bg">

    <LinearLayout
        android:id="@+id/title_layout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/comment_number_tv"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tip_icon_iv"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_gravity="top"
            android:padding="3dp"
            android:src="@drawable/common_full_open_on_phone"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/post_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/tip_icon_iv"
            android:gravity="left|center_vertical"
            android:maxLines="2"
            android:text="逗比的日常"
            android:textColor="@color/main_darkblue"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/title_layout_ll"
        android:layout_toLeftOf="@+id/comment_number_tv"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/post_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="暮雨潇潇"
            android:textColor="@color/main_darkblue"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="5dp"
            android:gravity="left"
            android:text="发表于"
            android:textSize="11sp"
            android:textColor="@color/main_blue"/>

        <TextView
            android:id="@+id/post_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="2017-02-06"
            android:textColor="@color/main_darkblue"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/comment_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:textColor="@color/main_blue"
        android:text="32"/>

</RelativeLayout>
