<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@drawable/common_full_open_on_phone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/forum_name_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="分论坛名"
                android:layout_weight="1"
                android:textColor="@color/main_darkblue"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/forum_description_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forum_name_tv"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/select_text"
                android:text="描述信息……"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/new_post_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textColor="@color/main_blue"
            android:text="32"/>
    </RelativeLayout>

</LinearLayout>
