<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/item_main_list_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/common_full_open_on_phone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/new_post_number_tv"
            android:layout_toRightOf="@+id/icon_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forum_name_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingBottom="3dp"
                android:paddingTop="5dp"
                android:text="分论坛名"
                android:textColor="@color/main_darkblue"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/forum_description_tv"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/forum_name_tv"
                android:layout_weight="1"
                android:gravity="left"
                android:text="描述信息……"
                android:textColor="@color/select_text"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/new_post_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="32"
            android:textColor="@color/main_blue"/>
    </RelativeLayout>
</LinearLayout>
